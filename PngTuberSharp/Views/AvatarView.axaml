<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="clr-namespace:PngTuberSharp.ViewModels"
			   xmlns:gif="clr-namespace:Avalonia.Gif;assembly=Avalonia.Gif"
			  x:DataType="vm:AvatarViewModel"
             x:Class="PngTuberSharp.Views.AvatarView">
	<Grid>
		<TextBlock Text="{Binding Fps}"></TextBlock>
		<Grid.RenderTransform>
			<TransformGroup>
				<ScaleTransform ScaleX="{Binding ZoomX}" ScaleY="{Binding ZoomY}" />
				<TranslateTransform X="{Binding PosX}" Y="{Binding PosY}"  />
			</TransformGroup>
		</Grid.RenderTransform>
		<Grid>
			<Grid.RenderTransform>
				<TransformGroup>
					<RotateTransform Angle="{Binding Rotation}" />
				</TransformGroup>
			</Grid.RenderTransform>
			<Grid.Opacity>
				<Binding Path="Opacity" />
			</Grid.Opacity>
			<Image Source="{Binding Image}" Name="image"></Image>

			<!--<gif:GifImage Grid.Column="1" SourceStream="{Binding Image}"
					 StretchDirection="Both" />-->
		</Grid>
	</Grid>
</UserControl>
