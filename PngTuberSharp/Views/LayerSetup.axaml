<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:i="https://github.com/projektanker/icons.avalonia"
             x:Class="PngTuberSharp.Views.LayerSetup">
	<StackPanel>
		<StackPanel Orientation="Horizontal" Margin="5,5,5,5">
			<TextBlock>Always Active Layers:</TextBlock>
			<Button  i:Attached.Icon="fa-solid fa-plus" />
		</StackPanel>

		<StackPanel x:Name="alwaysLayers" Margin="5,5,5,5">
			<Grid ColumnDefinitions="100,100,50">
				<TextBox>Name</TextBox>
				<ComboBox Grid.Column="1"></ComboBox>
				<Button Grid.Column="2"  i:Attached.Icon="fa-solid fa-minus" />
			</Grid>
		</StackPanel>

		<StackPanel Orientation="Horizontal" Margin="5,5,5,5">
			<TextBlock>Triggered Layers:</TextBlock>
			<Button  i:Attached.Icon="fa-solid fa-plus" />
		</StackPanel>

		<StackPanel x:Name="triggeredLayers" Margin="5,5,5,5">
		</StackPanel>

	</StackPanel>
</UserControl>
