<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PngTuberSharp.Views.LayoutMenu">
	<Grid ColumnDefinitions="100,200,*" RowDefinitions="45,25, *">
		<Label VerticalAlignment="Center">Background:</Label>
		<ComboBox x:Name="background"
				  Width="200"
				  VerticalAlignment="Center"
				  Grid.Column="1">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation="Horizontal">
						<TextBlock Text="{Binding}" Margin="0,0,10,0" />
						<Ellipse Width="15" Height="15" Fill="{Binding}"/>
					</StackPanel>
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<Label Grid.Row="1" VerticalAlignment="Center">Hex:</Label>
		<TextBox IsReadOnly="True" x:Name="backgroundHex" Grid.Row="1" Grid.Column="1" ></TextBox>

	</Grid>
</UserControl>
