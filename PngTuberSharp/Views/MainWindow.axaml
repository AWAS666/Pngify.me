<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PngTuberSharp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:PngTuberSharp.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		 xmlns:sett="clr-namespace:PngTuberSharp.Settings"
        x:Class="PngTuberSharp.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
		Background="Transparent"
        Title="PngTuberSharp">
	<Grid x:Name="grid" >
		<views:AvatarView DoubleTapped="DoubleClick" />
		<TabControl x:Name="settings" Background="#AAFF5733" Margin="1" 
					Padding="5,5,5,5" HorizontalAlignment="Right">
			<TabItem Header="VolumeSlider" FontSize="12" Width="125">
				<views:VolumeSlider />
			</TabItem>
			<TabItem Header="LayoutMenu" FontSize="12" Width="125">
				<views:LayoutMenu />
			</TabItem>
			<TabItem Header="LayerAdder" FontSize="12" Width="125">
				<views:LayerAdder />
			</TabItem>
			<TabItem Header="ChangeAvatar" FontSize="12" Width="125">
				<views:ChangeAvatar/>
			</TabItem>
		</TabControl>
	</Grid>

</Window>
