			 x:DataType="vm:TITSSetupViewModel"
             x:Class="PngTuberSharp.Views.TITSSetup"
			 >
	<Design.DataContext>
		<vm:TITSSetupViewModel/>
	</Design.DataContext>
	<Grid RowDefinitions="Auto,*">
		<StackPanel Spacing="5">
			<TextBlock FontSize="24">TITS Setup</TextBlock>
			<TextBlock TextWrapping="WrapWithOverflow" >Twitch Integrated Throwing System (TITS) allows you to throw items at your PngTuber.</TextBlock>
			<CheckBox x:Name="activated">Activated</CheckBox>
			<CheckBox x:Name="showHitbox">Show Hitboxes</CheckBox>
			<Button Command="{Binding Trigger}" Content="Test Trigger" />
			<Rectangle Margin="0,5,0,5" Height="1" Fill="Black"></Rectangle>

			<StackPanel Orientation="Horizontal" Spacing="10">
				<CheckBox IsChecked="{Binding Settings.EnableSound, Mode=TwoWay}">Sound Enabled</CheckBox>
				<Button Command="{Binding ChangeSound}">ChangeSound</Button>
				<Button Command="{Binding DefaultSound}">Default Sound</Button>
				<TextBlock Text="{Binding Settings.HitSound}"></TextBlock>
			</StackPanel>

			<StackPanel Orientation="Horizontal" Spacing="10">
				<TextBlock VerticalAlignment="Center">Gravity</TextBlock>
				<helper:UintTextBox Text="{Binding Settings.Gravity}"></helper:UintTextBox>
				<TextBlock VerticalAlignment="Center">pixels/sÂ²</TextBlock>
			</StackPanel>

			<StackPanel Orientation="Horizontal" Spacing="10">
				<TextBlock VerticalAlignment="Center">Minimum Object Speed:</TextBlock>
				<helper:UintTextBox Text="{Binding Settings.ObjectSpeedMin}" Max="{Binding Settings.ObjectSpeedMax}">"</helper:UintTextBox>
				<TextBlock VerticalAlignment="Center">pixels/s</TextBlock>
			</StackPanel>

			<StackPanel Orientation="Horizontal" Spacing="10">
				<TextBlock VerticalAlignment="Center">Maximum Object Speed:</TextBlock>
				<helper:UintTextBox Text="{Binding Settings.ObjectSpeedMax}"></helper:UintTextBox>
				<TextBlock VerticalAlignment="Center">pixels/s</TextBlock>
			</StackPanel>

			<StackPanel Orientation="Horizontal" Spacing="10">
				<TextBlock VerticalAlignment="Center">Collission speed drop:</TextBlock>
				<helper:UintTextBox Text="{Binding Settings.CollissionEnergyLossPercent}" Max="99"></helper:UintTextBox>
				<TextBlock VerticalAlignment="Center">%</TextBlock>
			</StackPanel>

			<Rectangle Margin="0,5,0,5" Height="1" Fill="Black"></Rectangle>
		</StackPanel>

