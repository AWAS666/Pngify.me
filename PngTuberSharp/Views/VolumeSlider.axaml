<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:i="https://github.com/projektanker/icons.avalonia"
             x:Class="PngTuberSharp.Views.VolumeSlider">
	<Grid>
		<StackPanel>
			<ComboBox x:Name="combo"/>
			<Button Click="SaveClick" Grid.Column="1" i:Attached.Icon="fa-regular fa-floppy-disk" />

			<StackPanel Orientation="Horizontal" Height="200">
				<Slider Orientation="Vertical" Minimum="0" Maximum="100" x:Name="current" />
				<Slider Orientation="Vertical" Minimum="0" Maximum="100" x:Name="max" />
			</StackPanel>			
		</StackPanel>
	</Grid>
</UserControl>
