    <PackageReference Include="NAudio" Version="2.2.1" />
    <PackageReference Include="OpenGL.Net" Version="0.8.4" />
    <PackageReference Include="Projektanker.Icons.Avalonia" Version="9.4.0" />
    <PackageReference Include="Projektanker.Icons.Avalonia.FontAwesome" Version="9.4.0" />
    <PackageReference Include="Semi.Avalonia" Version="11.1.0.4" />
    <PackageReference Include="Semi.Avalonia.ColorPicker" Version="11.1.0.4" />
    <PackageReference Include="Semi.Avalonia.DataGrid" Version="11.1.0.4" />
    <PackageReference Include="Serilog" Version="4.0.1" />
    <PackageReference Include="Serilog.Sinks.File" Version="6.0.0" />
    <PackageReference Include="SkiaImageView.Avalonia11" Version="1.5.0" />
