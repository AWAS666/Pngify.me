<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="1200"
			 xmlns:i="https://github.com/projektanker/icons.avalonia"
			  xmlns:vm="clr-namespace:PngifyMe.ViewModels"
			  xmlns:vmh="clr-namespace:PngifyMe.ViewModels.Helper"
			 xmlns:helper="clr-namespace:PngifyMe.Views.Helper"
			 xmlns:conv="clr-namespace:PngifyMe.Views.Converter"
			 x:DataType="vm:MicroPhoneSetupViewModel"
             x:Class="PngifyMe.Views.MicStateSetup"
			  xmlns:siv="https://github.com/kekyo/SkiaImageView"
			   xmlns:int="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
				xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
			 >
	<Design.DataContext>
		<vm:MicroPhoneSetupViewModel/>
	</Design.DataContext>
	<UserControl.Resources>
		<conv:FloatConverter x:Key="FloatConverter" />
	</UserControl.Resources>
	<Grid RowDefinitions="Auto,*">
		<StackPanel>
			<TextBlock FontSize="24">Microphone State Setup</TextBlock>
			<StackPanel Orientation="Horizontal" Margin="5,5,5,5" Spacing="5">
				<TextBlock VerticalAlignment="Center">States</TextBlock>
				<Button Classes="Secondary" Theme="{DynamicResource OutlineButton}"
						Command="{Binding Add}" i:Attached.Icon="fa-solid fa-plus" />
				<Button Classes="Secondary" Theme="{DynamicResource OutlineButton}"
						Command="{Binding Apply}" Content="Apply and Save" />
			</StackPanel>

			<Grid RowDefinitions="30,30,30" Margin="5,5,5,5">
				<Grid ColumnDefinitions="150,100,100" ToolTip.Tip="Time between blinks">
					<TextBlock VerticalAlignment="Center">Blink Interval</TextBlock>
					<helper:FloatTextBox Min="0.1" Grid.Column="1" Watermark="Interval" Text="{Binding Settings.BlinkInterval}" />
					<TextBlock Margin="5" VerticalAlignment="Center" Grid.Column="2">seconds</TextBlock>
				</Grid>

				<Grid ColumnDefinitions="150,100,100" Grid.Row="1" ToolTip.Tip="How long character blinks">
					<TextBlock VerticalAlignment="Center">Blink Time</TextBlock>
					<helper:FloatTextBox Min="0.1" Grid.Column="1" Text="{Binding Settings.BlinkTime}" Watermark="Blink Time"/>
					<TextBlock Margin="5" VerticalAlignment="Center" Grid.Column="2">seconds</TextBlock>
				</Grid>

				<Grid ColumnDefinitions="150,100,100" Grid.Row="2" 
					  ToolTip.Tip="Blending of last image, set to 0 to disable all blending"> 
					<TextBlock VerticalAlignment="Center">Blend Time</TextBlock>
					<helper:FloatTextBox Min="0" Max="{Binding Settings.BlinkTime}" Grid.Column="1"
										 Text="{Binding Settings.TransitionTime}" Watermark="Blend Time"/>
					<TextBlock Margin="5" VerticalAlignment="Center" Grid.Column="2">seconds</TextBlock>
				</Grid>

			</Grid>
		</StackPanel>

		<ScrollViewer Grid.Row="1">
			<ListBox ItemsSource="{Binding States}" Margin="0,5,0,0">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<StackPanel>
							<StackPanel Orientation="Horizontal" Spacing="5" Margin="0,0,0,25">
								<TextBox Watermark="Name" Width="150" Text="{Binding State.Name}"></TextBox>
								<Button
									Classes="Secondary" Theme="{DynamicResource OutlineButton}"
									Command="{Binding $parent[ListBox].((vm:MicroPhoneSetupViewModel)DataContext).Remove}"
									CommandParameter="{Binding}"
									Margin="5,0,0,0" HorizontalAlignment="Left"
									i:Attached.Icon="fa-solid fa-minus" />

								<Button
									Classes="Secondary" Theme="{DynamicResource OutlineButton}"
									Command="{Binding $parent[ListBox].((vm:MicroPhoneSetupViewModel)DataContext).SwitchState}"
									CommandParameter="{Binding}"
									Margin="5,0,0,0" HorizontalAlignment="Left"
									Content="Activate" />
								<CheckBox IsChecked="{Binding DefaultState, Mode=TwoWay}" Click="CheckChanged" Content="Default"></CheckBox>
								<TextBox Name="Hotkeybox"
										 Text="{Binding Hotkey}"
										 Margin="15,0,0,0" Watermark="Hotkey" Width="150">
									<int:Interaction.Behaviors>
										<ia:EventTriggerBehavior EventName="KeyDown" SourceObject="Hotkeybox">
											<ia:InvokeCommandAction Command="{Binding OnKeyDown}" PassEventArgsToCommand="True" />
										</ia:EventTriggerBehavior>
									</int:Interaction.Behaviors>
								</TextBox>
							</StackPanel>

							<Grid ColumnDefinitions="100,125,35,100,125,35">
								<TextBlock VerticalAlignment="Center">Open Mouth</TextBlock>
								<Button Command="{Binding LoadFile}" Grid.Column="1"
										CommandParameter="{Binding State.Open}">
									<siv:SKImageView VerticalAlignment="Center" HorizontalAlignment="Right"
													 MaxWidth="100" Stretch="Uniform"
										   Source="{Binding State.Open.Bitmap.Preview}">
									</siv:SKImageView>
								</Button>
								<Button
									Classes="Secondary" Theme="{DynamicResource OutlineButton}"
									Command="{Binding Delete}" CommandParameter="{Binding State.Open}"
									Grid.Column="2" VerticalAlignment="Top"  i:Attached.Icon="fa-solid fa-trash" />

								<TextBlock VerticalAlignment="Center" Grid.Column="3">Closed Mouth</TextBlock>
								<Button Command="{Binding LoadFile}" Grid.Column="4"
										CommandParameter="{Binding State.Closed}">
									<siv:SKImageView VerticalAlignment="Center" HorizontalAlignment="Right"
													 MaxWidth="100" Stretch="Uniform"
													 Source="{Binding State.Closed.Bitmap.Preview}">
									</siv:SKImageView>
								</Button>
								<Button Classes="Secondary" Theme="{DynamicResource OutlineButton}"
										Command="{Binding Delete}" CommandParameter="{Binding State.Closed}"
										Grid.Column="5" VerticalAlignment="Top"  i:Attached.Icon="fa-solid fa-trash" />
							</Grid>

							<Grid ColumnDefinitions="100,125,35,100,125,35">
								<StackPanel VerticalAlignment="Center">
									<TextBlock VerticalAlignment="Center">Open Mouth</TextBlock>
									<TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">Blink</TextBlock>
								</StackPanel>
								<Button Command="{Binding LoadFile}" Grid.Column="1"
										CommandParameter="{Binding State.OpenBlink}">
									<siv:SKImageView VerticalAlignment="Center" HorizontalAlignment="Right"
													 MaxWidth="100" Stretch="Uniform"
													 Source="{Binding State.OpenBlink.Bitmap.Preview}">
									</siv:SKImageView>
								</Button>
								<Button Classes="Secondary" Theme="{DynamicResource OutlineButton}"
										Command="{Binding Delete}" CommandParameter="{Binding State.OpenBlink}"
										Grid.Column="2" VerticalAlignment="Top"  i:Attached.Icon="fa-solid fa-trash" />

								<StackPanel VerticalAlignment="Center" Grid.Column="3">
									<TextBlock VerticalAlignment="Center">Closed Mouth</TextBlock>
									<TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">Blink</TextBlock>
								</StackPanel>
								<Button Command="{Binding LoadFile}" Grid.Column="4"
										CommandParameter="{Binding State.ClosedBlink}">
									<siv:SKImageView VerticalAlignment="Center" HorizontalAlignment="Right"
													 MaxWidth="100" Stretch="Uniform"
													 Source="{Binding State.ClosedBlink.Bitmap.Preview}">
									</siv:SKImageView>
								</Button>

								<Button Classes="Secondary" Theme="{DynamicResource OutlineButton}"
										Command="{Binding Delete}" CommandParameter="{Binding State.ClosedBlink}"
										Grid.Column="5" VerticalAlignment="Top"  i:Attached.Icon="fa-solid fa-trash" />
							</Grid>


						</StackPanel>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</ScrollViewer>

	</Grid>
</UserControl>
