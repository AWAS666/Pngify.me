<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:i="https://github.com/projektanker/icons.avalonia"
             x:Class="PngifyMe.Views.VolumeSlider">
	<Grid>
		<StackPanel>
			<TextBlock FontSize="24">Microphone Setup</TextBlock>
			<StackPanel Orientation="Horizontal" Spacing="5" Margin="5,5,5,5">
				<ComboBox x:Name="combo"/>
				<Button VerticalAlignment="Center" Click="SaveClick" Grid.Column="1" i:Attached.Icon="fa-regular fa-floppy-disk" />
			</StackPanel>			

			<Grid RowDefinitions="200,35" ColumnDefinitions="75,75" Margin="5,5,5,5">
				<Slider Orientation="Vertical" Minimum="0" Maximum="100" x:Name="current" />
				<Slider Grid.Column="1" Orientation="Vertical" Minimum="0" Maximum="100" x:Name="max" />
				
				<TextBlock Grid.Row="1">Current</TextBlock>
				<TextBlock Grid.Row="1" Grid.Column="1">Treshhold</TextBlock>
			</Grid>
		</StackPanel>
	</Grid>
</UserControl>
