<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="550"
        x:Class="PngifyMe.CrashWindow"
        Title="PngifyMe - Application Crash"
        Width="800"
        Height="550"
        MinWidth="600"
        MinHeight="400"
        WindowStartupLocation="CenterScreen"
        Icon="/Assets/icon.ico"
        Background="#283b91"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text=":(" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       Foreground="#f15a2a"
                       Margin="0,0,0,10"/>
            <TextBlock Text="Application Crashed" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#f15a2a"
                       Margin="0,0,0,10"/>
            <TextBlock Text="The application has encountered an unexpected error. Please report this issue." 
                       FontSize="14" 
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Exception Display -->
        <Border Grid.Row="1" 
                Background="#2d2d2d" 
                BorderBrush="#404040" 
                BorderThickness="1" 
                CornerRadius="5"
                Padding="15"
                Margin="0,0,0,20">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <StackPanel Spacing="10">
                    <TextBlock Text="Exception Details:" 
                               FontWeight="Bold" 
                               Foreground="#FF6B6B"
                               Margin="0,0,0,5"/>
                    <TextBlock x:Name="ExceptionMessageText" 
                               TextWrapping="Wrap" 
                               Foreground="#E0E0E0"
                               FontFamily="Consolas, Courier New, monospace"/>
                    <TextBlock Text="Stack Trace:" 
                               FontWeight="Bold" 
                               Foreground="#FF6B6B"
                               Margin="0,10,0,5"/>
                    <TextBox x:Name="StackTraceText" 
                              IsReadOnly="True" 
                              TextWrapping="Wrap" 
                              AcceptsReturn="True"
                              Background="Transparent"
                              Foreground="#E0E0E0"
                              BorderThickness="0"
                              FontFamily="Consolas, Courier New, monospace"
                              ScrollViewer.HorizontalScrollBarVisibility="Auto"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Spacing="10"
                    Margin="0,0,0,15">
            <Button x:Name="OpenLogsButton" 
                    Content="Open Logs Folder" 
                    BorderThickness="1"
                    BorderBrush="black"
                    Foreground="#f15a2a"
                    Padding="15,8"
                    Click="OpenLogsButton_Click"/>
            <Button Content="Close" 
                    BorderThickness="1"
                    BorderBrush="black"
                    Foreground="#f15a2a"
                    Padding="15,8"
                    Click="CloseButton_Click"/>
        </StackPanel>

        <!-- Support Link -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <TextBlock Text="Need help?"
                       VerticalAlignment="Center"/>
            <TextBlock x:Name="SupportLinkText"
                       TextDecorations="Underline"
                       Foreground="#4A9EFF"
                       Cursor="Hand"
                       Text="{Binding SupportUrlValue}"
                       PointerPressed="SupportLink_PointerPressed"
                       ToolTip.Tip="{Binding SupportUrlValue}"/>
        </StackPanel>
    </Grid>
</Window>
